generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}



enum UserType {
  ADMIN
  STUDENTS
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  age       String
  user_type UserType @default(STUDENTS)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  enrollments Enrollment[]
  messages    Message[]
}

model ClassRoom {
  id          String   @id @default(uuid())
  name        String
  description String?
  ageRange    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  enrollments Enrollment[]
  messages    Message[]
}

model Enrollment {
  id        String   @id @default(uuid())
  studentId String
  classId   String
  createdAt DateTime @default(now())

  user      User      @relation(fields: [studentId], references: [id], onDelete: Cascade)
  classRoom ClassRoom @relation(fields: [classId], references: [id], onDelete: Cascade)

  /// Evita o aluno entrar 2x na mesma turma
  @@unique([studentId, classId])
}

model Message {
  id        String   @id @default(uuid())
  text      String
  createdAt DateTime @default(now())

  studentId String
  classId   String

  user      User      @relation(fields: [studentId], references: [id], onDelete: Cascade)
  classRoom ClassRoom @relation(fields: [classId], references: [id], onDelete: Cascade)
}
